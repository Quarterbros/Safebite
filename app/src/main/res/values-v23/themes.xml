<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SafeBiteCapstone" parent="Theme.MaterialComponents.Light">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_stardar</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_stardar</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background -->
        <item name="backgroundColor">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:subtitleTextStyle">@color/white</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>